            android:id="@+id/Dec"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="18sp"
            android:text="12"
            android:background="?android:attr/selectableItemBackground"/>
