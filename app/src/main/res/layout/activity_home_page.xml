<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE">
    <RelativeLayout
        android:id="@+id/mine_part1"
        android:layout_width="match_parent"
        android:layout_height="211dp"
        android:background="#FFFFFF">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/my_portrait_img"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/photo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"/>
        <TextView
            android:id="@+id/login_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请登陆"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_below="@id/my_portrait_img"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/my_data_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#FFFFFF"
        android:layout_below="@id/mine_part1"
        android:layout_marginTop="8dp">
        <ImageView
            android:id="@+id/mine_pic1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:src="@drawable/my_data"/>
        <TextView
            android:id="@+id/my_data_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人资料"
            android:textColor="#121212"
            android:textSize="16sp"
            android:layout_toRightOf="@id/mine_pic1"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/mine_data_button"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:src="@drawable/next_icon"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/my_order_info_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#FFFFFF"
        android:layout_below="@id/my_data_layout"
        android:layout_marginTop="3dp">
        <ImageView
            android:id="@+id/mine_pic4"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:src="@drawable/my_info"/>
        <TextView
            android:id="@+id/order_info_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的订单"
            android:textColor="#121212"
            android:textSize="16sp"
            android:layout_toRightOf="@id/mine_pic4"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/mine_info_button"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:src="@drawable/next_icon"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/input_order_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#FFFFFF"
        android:layout_below="@id/my_order_info_layout"
        android:layout_marginTop="3dp">
        <ImageView
            android:id="@+id/mine_pic"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:src="@drawable/edit"/>
        <TextView
            android:id="@+id/input_order_info_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="输入订单"
            android:textColor="#121212"
            android:textSize="16sp"
            android:layout_toRightOf="@id/mine_pic"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/input_info_button"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:src="@drawable/next_icon"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
</RelativeLayout>